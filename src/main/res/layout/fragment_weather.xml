            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/hyderabad_card_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
