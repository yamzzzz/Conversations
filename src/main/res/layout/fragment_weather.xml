<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/delhi_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/delhi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="Delhi"
                        android:textAppearance="@android:style/TextAppearance.Medium" />

                    <ImageView
                        android:id="@+id/delhi_dropdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/dropdown_right" />

                    <RelativeLayout
                        android:id="@+id/delhi_expanded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/delhi"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/delhi_current_temp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="26sp" />

                        <TextView
                            android:id="@+id/delhi_min_temp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/delhi_current_temp"
                            android:padding="5dp"
                            android:textAppearance="@android:style/TextAppearance.Small" />

                        <TextView
                            android:id="@+id/delhi_max_temp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/delhi_min_temp"
                            android:padding="5dp"
                            android:textAppearance="@android:style/TextAppearance.Small" />

                        <TextView
                            android:id="@+id/delhi_humidity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/delhi_max_temp"
                            android:padding="5dp"
                            android:textAppearance="@android:style/TextAppearance.Small" />

                        <ProgressBar
                            android:id="@+id/delhi_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            style="@android:style/Widget.ProgressBar.Small"/>

                    </RelativeLayout>


                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
